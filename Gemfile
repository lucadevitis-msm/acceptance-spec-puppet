# gemspec
source 'https://rubygems.org' do
  group :docs do
    gem 'yard'
  end

  group :development do
    gem 'bundler', '~> 1.11'
    gem 'metadata-json-lint'
    gem 'pry'
    gem 'puppet', '< 4'
    gem 'puppetlabs_spec_helper'
    gem 'rake', '~> 10.0'
    gem 'rubocop'
    gem 'safe_yaml' # This is required to make puppet 3 to work with ruby 2.2.5
    gem 'serverspec'
    gem 'wirble'
  end
end
